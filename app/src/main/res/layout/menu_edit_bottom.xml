<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/menubuttonframe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >

    <LinearLayout
        android:id="@+id/menuEditBottomLayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnBrush"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Brush"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/button_selector"
            android:src="@drawable/brush"
            android:layout_marginStart="5dp"
            tools:ignore="HardcodedText,SmallSp" />

        <ImageButton
            android:id="@+id/btnAddText"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="AddText"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/button_selector"
            android:src="@drawable/addtext"
            android:layout_marginStart="5dp"
            tools:ignore="HardcodedText,SmallSp" />

        <ImageButton
            android:id="@+id/btnFilter"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Filter"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/button_selector"
            android:src="@drawable/filter"
            android:layout_marginStart="5dp"
            tools:ignore="HardcodedText,SmallSp" />

        <ImageButton
            android:id="@+id/btnEmoji"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Emoji"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/button_selector"
            android:src="@drawable/emoij"
            android:layout_marginStart="5dp"
            tools:ignore="HardcodedText,SmallSp" />

    </LinearLayout>
</FrameLayout>